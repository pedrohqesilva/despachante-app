{
  "name": "despachante-app",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@despachante/web",
    "dev:server": "turbo dev --filter=@despachante/server",
    "build": "turbo build",
    "build:web": "turbo build --filter=@despachante/web",
    "build:server": "turbo build --filter=@despachante/server",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "convex:dev": "pnpm --filter @despachante/convex dev",
    "convex:deploy": "pnpm --filter @despachante/convex deploy",
    "railway:deploy": "railway up apps/web --service web --detach && railway up apps/server --service server --detach",
    "railway:deploy:web": "railway up apps/web --service web",
    "railway:deploy:server": "railway up apps/server --service server"
  },
  "devDependencies": {
    "shadcn": "^3.8.4",
    "turbo": "^2.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
